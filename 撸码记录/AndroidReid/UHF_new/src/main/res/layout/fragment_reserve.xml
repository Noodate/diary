<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_resever_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_new_visit_password" />

        <EditText
            android:id="@+id/editText_new_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/button_set_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_set" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_new_destoy_password" />

        <EditText
            android:id="@+id/editText_new_kill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/button_set_kill_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_set" />

    </LinearLayout>    

</LinearLayout>
