<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editText_option_info"
        android:layout_width="match_parent"
        android:gravity="top"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="5dp"
        android:background="@drawable/corners_background"
        android:ems="10"
        android:focusable="false"
        android:padding="5dp" >
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_option_getchara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_chara" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/name" />

            <EditText
                android:id="@+id/editText_option_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:background="@drawable/corners_background"
                android:padding="5dp" />

            <Button
                android:id="@+id/button_option_insert"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/insert_db" />
        </LinearLayout>

        <Button
            android:id="@+id/button_option_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_db" />

        <Button
            android:id="@+id/button_option_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clear" />

    </LinearLayout>

</LinearLayout>